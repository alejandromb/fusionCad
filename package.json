{
  "name": "fusion-cad",
  "version": "0.1.0",
  "private": true,
  "description": "Electrical CAD tool for control schematics - automation-first, local-first",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:all": "npm run dev:api & npm run dev",
    "cli": "npm run start --workspace=apps/cli",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "vitest run --config packages/mcp-server/vitest.config.ts",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:slow": "SLOWMO=500 npx playwright test --headed",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules packages/*/dist apps/*/dist"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
